{
  "name": "Data Science Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "ds-dev",                            // Change name to match container
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-toolsai.vscode-jupyter-slideshow"
      ],
      "settings": {
        "python.pythonPath": "/opt/conda/envs/ds-base/bin/python",
        "python.terminal.activateEnvironment": false,
        "jupyter.jupyterServerType": "local"
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/,target=/workspace/,type=bind"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "conda init bash && conda activate ds-base && pip install -r requirements.txt",
  "forwardPorts": [8888],                  // Add any ports on the array if needed
  "portsAttributes": {
    "8888": {
      "label": "JupyterLab",
      "onAutoForward": "notify"
    }                                     // Don't forget to add a comma if you add more ports
    // Example of port for extra services...
    // "8501": {
    //   "label": "Streamlit",
    //   "onAutoForward": "notify"
    // }
  }
}
